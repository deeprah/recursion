// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
void hanoi(int n,char a,char b,char c)
{
    if(n==0)return ;
    hanoi(n-1,a,c,b);
    cout<<a<<"->"<<c<<endl;
    hanoi(n-1,b,a,c);
}

int main() {
 int n;
 cout<<" enter the number of disks :";
 cin>>n;
   hanoi(n,'A','B','C');
    return 0;
}
n=umber of disks=2*n-1;
